---
const { title, url, description, pubDate, ogImage } = Astro.props;
---

<a href={url} title={title}>
  <div class="grid grid-cols-1 lg:grid-cols-4 py-3 lg:py-12 group">
    <div>
      <time datetime={pubDate} class="block text-sm leading-6 text-neutral-500"
        >{pubDate}</time
      >
    </div>
    <div class="lg:col-span-2">
      <h3
        class="mt-3 text-lg leading-6 text-black lg:text-4xl line-clamp-3 lg:mt-0 group-hover:text-orange-500">
        {title}
      </h3>
      <p class="mt-4 text-neutral-500 line-clamp-3">
        {description}
      </p>
    </div>
    <div class="hidden lg:block ml-auto">
      <span class="ml-auto"> &rarr;</span>
    </div>
  </div>
</a>
