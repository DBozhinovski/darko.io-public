---
const { title, url, description, pubDate, image } = Astro.props;
---

<article>
  <a
    href={url}
    title={title}
    class="flex flex-col gap-2 lg:gap-4 lg:flex-row items-start">
    <div class="relative h-40 w-full xl:w-64 xl:shrink-0 lg:order-last">
      <img
        src={image}
        alt={title}
        class="h-full w-full bg-neutral-50 object-cover"
      />
    </div>
    <div>
      <div class="group relative lg:max-w-xl">
        <time
          datetime={pubDate}
          class="block text-sm leading-6 text-neutral-500">{pubDate}</time
        >
        <h3
          class="mt-3 text-lg font-semibold leading-6 text-black lg:text-xl line-clamp-3">
          {title}
        </h3>
        <p class="mt-4 text-neutral-500 line-clamp-3">
          {description}
        </p>
      </div>
    </div>
  </a>
</article>
