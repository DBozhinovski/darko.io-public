---
import { Image } from 'astro:assets';

const { title, url, description, pubDate, author, image } = Astro.props;
---

<article class="lg:py-6">
  <a
    href={url}
    title={title}
    class="relative isolate flex flex-col gap-2 lg:gap-4 lg:flex-row items-start">
    <div
      class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
      <Image
        width="1088"
        height="500"
        class="absolute inset-0 h-full w-full object-cover"
        src={image}
        alt={title}
      />
    </div>
    <div>
      <div class="group relative max-w-xl">
        <time
          datetime={pubDate}
          class="block text-sm leading-6 text-neutral-500">{pubDate}</time
        >
        <h3
          class="mt-3 text-lg font-semibold leading-6 text-black lg:text-xl line-clamp-3">
          {description}
        </h3>
      </div>
    </div>
  </a>
</article>
