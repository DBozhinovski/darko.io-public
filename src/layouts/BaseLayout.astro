---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/global/Navigation.astro";
import Footer from "../components/global/Footer.astro";

---

<html lang="en" class="selection:bg-[#ff2700] selection:text-white" transition:animate="none">
  <head>
    <BaseHead />
    <script
      defer
      data-domain="darko.io"
      data-api="https://worker-restless-haze-4722.hello-83f.workers.dev/api/event"
      src="https://worker-restless-haze-4722.hello-83f.workers.dev/js/script.js"></script>
  </head>
  <body class="bg-white max-w-screen overflow-x-hidden">
    <Navigation transition:persist />
    <div transition:animate="initial">
      <slot />
    </div>
    <Footer transition:persist />

    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </body>
</html>
